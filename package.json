{
	"name": "kasirung",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:unit:coverage": "vitest --coverage",
		"test:unit:watch": "vitest --watch",
		"test": "npm run test:unit && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:watch": "npm run test:unit:watch --",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "tsx src/lib/db/seed.ts",
		"db:studio": "drizzle-kit studio",
		"test:simklinik": "vitest run 'src/lib/server/**/simklinik/**/*.{test,spec}.{js,ts}' 'src/routes/**/simklinik/**/*.{test,spec}.{js,ts}'",
		"test:simklinik:coverage": "vitest run 'src/lib/server/**/simklinik/**/*.{test,spec}.{js,ts}' 'src/routes/**/simklinik/**/*.{test,spec}.{js,ts}' --coverage",
		"test:simklinik:unit": "vitest run 'src/lib/server/repositories/simklinik/**/*.{test,spec}.{js,ts}' 'src/lib/server/services/simklinik/**/*.{test,spec}.{js,ts}'",
		"test:simklinik:api": "vitest run 'src/routes/api/simklinik/**/*.{test,spec}.{js,ts}'",
		"test:simklinik:ui": "vitest run 'src/routes/(app)/simklinik/**/*.{test,spec}.{js,ts}'",
		"test:simklinik:watch": "vitest --watch 'src/lib/server/**/simklinik/**/*.{test,spec}.{js,ts}' 'src/routes/**/simklinik/**/*.{test,spec}.{js,ts}'"
	},
	"dependencies": {
		"@fullcalendar/core": "^6.1.19",
		"@fullcalendar/daygrid": "^6.1.19",
		"@fullcalendar/interaction": "^6.1.19",
		"@fullcalendar/timegrid": "^6.1.19",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@node-rs/argon2": "^2.0.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.48.4",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/svelte": "^5.2.8",
		"@typescript-eslint/eslint-plugin": "^8.46.3",
		"@typescript-eslint/parser": "^8.46.3",
		"autoprefixer": "^10.4.21",
		"chart.js": "^4.5.1",
		"class-variance-authority": "^0.7.1",
		"drizzle-kit": "^0.31.6",
		"drizzle-orm": "^0.44.7",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"lucia": "^3.2.2",
		"lucide-svelte": "^0.553.0",
		"mdsvex": "^0.12.6",
		"motion": "^12.23.24",
		"pdf-lib": "^1.17.1",
		"postcss": "^8.5.6",
		"postgres": "^3.4.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.43.5",
		"svelte-check": "^4.3.4",
		"sveltekit-superforms": "^2.28.1",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"vitest": "^4.0.13",
		"zod": "^4.1.12",
		"vite": "npm:rolldown-vite@latest"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@types/node": "^24.10.1",
		"jsdom": "^25.0.1"
	}
}
